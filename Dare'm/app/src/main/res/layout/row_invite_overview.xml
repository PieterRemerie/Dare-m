<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/categoryImage"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/categoryimage"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewChallenge"
                android:layout_gravity="center"
                android:text="hier komt challenge naam"
                android:layout_weight="0.6"/>
            <ImageButton
                android:layout_width="50px"
                android:layout_height="50px"
                android:id="@+id/btnAcceptInvite"
                android:src="@mipmap/checkmark_accepted"
                android:layout_gravity="center"
                android:layout_weight="0.1"/>

            <ImageButton
                android:id="@+id/btnDeclineInvite"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:src="@mipmap/checkmark_declined" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>